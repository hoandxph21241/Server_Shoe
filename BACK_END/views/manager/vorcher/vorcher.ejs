<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .card {
            margin-bottom: 8px;
        }
        .card .card-body {
            padding: 15px;
        }
        .card .progress {
            height: 6px;
        }
        .toggle-switch {
            display: inline-block;
            width: 34px;
            height: 20px;
            position: relative;
        }
        .toggle-switch input {
            display: none;
        }
        .toggle-switch input:checked + .slider {
            background-color: #007bff;
        }
        .toggle-switch .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }
        .toggle-switch .slider:before {
            position: absolute;
            content: "";
            height: 14px;
            width: 14px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        .toggle-switch input:checked + .slider:before {
            transform: translateX(14px);
        }
        .modal-content {
            border-radius: 10px;
        }
        .modal-body {
            padding: 2rem;
        }
        .form-label {
            margin-bottom: 0.5rem;
        }
        .form-control {
            margin-bottom: 1rem;
            border-radius: 5px;
            height: calc(2.25rem + 2px);
        }
        .modal-footer {
            display: flex;
            justify-content: center;
            border-top: none;
        }
        .btn-cancel {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            color: #6c757d;
            margin-right: 10px;
        }
        .btn-save {
            background-color: #6366f1;
            border: none;
            color: white;
        }
    </style>
</head>
<body>
    <%- include('../../inc/top.ejs') %>
    <div class="container">
        <div class="row d-flex align-items-center my-3">
            <div class="col-auto">
                <h4 class="fw-bold">Mã giảm giá</h4>
            </div>
            <div class="col-auto ms-2">
                <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#addModal">Add</button>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <!-- Repeat this card for each product -->
            <% discounts.forEach(function(discount) { %>
            <div class="row mt-5">
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title m-0"><%= discount.couponCode %></h5>
                                <div class="action">
                                    <button class="btn btn-light">...</button>
                                </div>
                            </div>
                            <p class="card-text fw-bold">$<%= discount.discountAmount %></p>
                            <div class="card">
                                <div class="card-body">
                                    <div class="mb-2 d-flex justify-content-between align-items-center">
                                        <small class="text-muted">Thời gian kết thúc</small>
                                        <p class="m-0"><%= new Date(discount.endDate).toLocaleString() %></p>
                                    </div>
                                    <hr class="my-2">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <small class="text-muted">Số lượng</small>
                                        <div class="d-flex align-items-center">
                                            <div class="ms-2 me-2" style="width: 50px;">
                                                <div class="progress">
                                                    <div class="progress-bar bg-warning" role="progressbar" ></div>
                                                </div>
                                            </div>
                                            <p class="m-0"><%= discount.quantity %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             
            </div>
            <% }); %>
            <!-- End of card repeat -->
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Thêm mã giảm giá</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Modal content goes here -->
                    <form action="/discount/add" method="post">
                     
                        <div class="mb-3">
                            <label for="discountAmount" class="form-label">Giảm giá:</label>
                            <input type="number" class="form-control" id="discountAmount" name="discountAmount" placeholder="Number">
                        </div>
                        <div class="mb-3">
                            <label for="endDate" class="form-label">Thời gian kết thúc:</label>
                            <input type="text" class="form-control" id="endDate" name="endDate" placeholder="Text">
                        </div>
                        <div class="mb-3">
                            <label for="maxUser" class="form-label">Số lượng:</label>
                            <input type="number" class="form-control" id="maxUser" name="maxUser" placeholder="Text">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-save">Save</button>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>

    <%- include('../../inc/end.ejs') %>
</body>
</html>
