<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <!-- Add Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <style>
    .main-content {
      margin-left: 20px;
      margin-right: 20px;
    }

    .dashboard-cards .card {
      text-align: center;
    }

    .table-responsive {
      margin-top: 20px;
    }

    #myChart {
      height: 300px;
      background-color: #f8f9fa;
    }

    .list-group-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .btn {
      border-radius: 20px;
      margin-left: 10px;
    }

    .card-body img {
      margin-right: 10px;
    }

    .remaining-products {
      display: flex;
      flex-direction: column;
      gap: 10px;
      transition: max-height 0.3s ease-in-out;
      overflow: hidden;
    }

    .remaining-product {
      display: flex;
      align-items: center;
    }

    .remaining-product img {
      width: 50px;
      height: 50px;
      margin-right: 10px;
    }

    .toggle-button {
      display: inline-flex;
      align-items: center;
      cursor: pointer;
      color: blue;
      text-decoration: none;
      user-select: none;
    }

    .toggle-button::after {
      content: '▼';
      margin-left: 5px;
      transition: transform 0.3s ease;
    }

    .toggle-button.expanded::after {
      transform: rotate(-180deg);
    }



    .btn-action form {
      display: flex;
      justify-content: center;
      display: inline;
    }
  </style>
</head>

<body>
  <%- include('../inc/top.ejs') %>
    <div class="main-content">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Admin Dashboard</h1>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body d-flex align-items-center">
              <img src="/images/shopping-card.png" alt="" width="50" height="50">
              <div>
                <h5 class="card-title">Sản phẩm</h5>
                <h6>
                  <%= totalProducts %>
                </h6>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body d-flex align-items-center">
              <img src="/images/shopping-card.png" alt="" width="50" height="50">
              <div>
                <h5 class="card-title">Đơn hàng</h5>
                <h6>Shipping: Next express</h6>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body d-flex align-items-center">
              <img src="/images/shopping-card.png" alt="" width="50" height="50">
              <div>
                <h5 class="card-title">Tổng doanh thu</h5>
                <h6>Payment method: Paypal</h6>
              </div>
            </div>
          </div>
        </div>
      </div>

      <h4>Đơn chờ xác nhận</h4>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>Custom Name</th>
              <th>Order ID</th>
              <th>Product</th>
              <th>Date</th>
              <th>Amount</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <% orderPending.forEach(order=> { %>
              <tr onclick="handleRowClick(event, '<%= order._id %>')">
                <td>
                  <div class="profile-header">
                    <img src="<%= order.userImageAccount %>" width="40" height="40" class="rounded-circle"
                      alt="Customer Image">
                    <span>
                      <%= order.userNameAccount %>
                    </span>
                  </div>
                </td>
                <td>
                  <%= order._id %>
                </td>
                <td>
                  <div>
                    <img src="<%= order.details[0].thumbnail || 'https://via.placeholder.com/50' %>"
                      class="img-thumbnail me-2" width="50" height="50" alt="Product Image">
                    <span>
                      <%= order.details[0].name %> x<%= order.details[0].quantity %>
                    </span>
                    <% if (order.details.length> 1) { %>
                      <span class="toggle-button" onclick="toggleRemainingProducts(event, this)"></span>
                      <div class="remaining-products" style="max-height: 0;">
                        <% order.details.slice(1).forEach(detail=> { %>
                          <div class="remaining-product">
                            <img src="<%= detail.thumbnail || 'https://via.placeholder.com/50' %>"
                              class="img-thumbnail me-2" width="40" height="40" alt="Product Image">
                            <span>
                              <%= detail.name %> x<%= detail.quantity %>
                            </span>
                          </div>
                          <% }) %>
                      </div>
                      <% } %>
                  </div>
                </td>
                <td>
                  <%= order.dateOrder %>
                </td>
                <td>
                  <%= order.total %> VND
                </td>
                <td class="btn-action">

                  <button class="btn btn-sm btn-danger cancel-order-btn" data-order-id="<%= order._id %>">Từ
                    chối</button>
                  <form action="order/prepareOrder/<%= order._id %>" method="post">
                    <button class="btn btn-sm btn-primary ml-2">Xác nhận</button>
                  </form>

                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <h3>Doanh thu</h3>
        <div class="d-flex align-items-center">
          <h6 class="me-3">Sale Graph</h6>
          <div class="ms-auto">
            <button type="button" class="btn btn-outline-dark">WEEKLY</button>
            <button type="button" class="btn btn-outline-dark">MONTHLY</button>
            <button type="button" class="btn btn-outline-dark">YEARLY</button>
          </div>
        </div>
        <div class="my-4 w-100" id="myChart" width="900" height="380"></div>
      </div>

      <div class="col-md-6">
        <h3>Best Seller</h3>
        <ul class="list-group">
          <li class="list-group-item">
            Adidas Ultra Boost
            <span>$126.50 - 999 sales</span>
          </li>
          <li class="list-group-item">
            Adidas Ultra Boost
            <span>$126.50 - 999 sales</span>
          </li>
          <li class="list-group-item">
            Adidas Ultra Boost
            <span>$126.50 - 999 sales</span>
          </li>
        </ul>
      </div>
    </div>
    </div>

    <%- include('../inc/end.ejs') %>

      <!-- Cancel Dialog -->
      <div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="cancelOrderModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="cancelOrderModalLabel">Cancel Order</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form id="cancel-form">
                <div class="mb-3">
                  <label for="cancelReason" class="form-label">Reason for Cancellation</label>
                  <textarea class="form-control" id="cancelReason" rows="3" required></textarea>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-danger" id="cancel-order">Cancel Order</button>
            </div>
          </div>
        </div>
      </div>

      <script>
        function handleRowClick(event, orderId) {
          if (!event.target.classList.contains('toggle-button') &&
            !event.target.closest('.remaining-products') &&
            !event.target.matches('[data-no-click]')) {
            window.location = '/order/orderDetails/' + orderId;
          }
        }

        function toggleRemainingProducts(event, element) {
          event.stopPropagation();
          const productsContainer = element.nextElementSibling;
          if (productsContainer.style.maxHeight && productsContainer.style.maxHeight !== '0px') {
            productsContainer.style.maxHeight = '0px';
            element.classList.remove('expanded');
          } else {
            productsContainer.style.maxHeight = productsContainer.scrollHeight + 'px';
            element.classList.add('expanded');
          }
        }

        document.querySelectorAll('.cancel-order-btn').forEach(button => {
          button.addEventListener('click', (event) => {
            event.stopPropagation(); // Prevent the row click event from firing
            const orderId = button.getAttribute('data-order-id');
            const cancelOrderModal = new bootstrap.Modal(document.getElementById('cancelOrderModal'));
            document.getElementById('cancel-order').setAttribute('data-order-id', orderId);
            cancelOrderModal.show();
          });
        });

        document.getElementById('cancel-order').addEventListener('click', async () => {
          const orderId = document.getElementById('cancel-order').getAttribute('data-order-id');
          const cancelReason = document.getElementById('cancelReason').value;
          try {
            const response = await fetch(`/api/cancelOrder/${orderId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ cancelReason }),
            });

            if (response.ok) {
              const result = await response.json();
              alert(result.message);
              location.reload();
            } else {
              const error = await response.json();
              alert(error.message);
            }
          } catch (error) {
            console.error('Error canceling order:', error);
            alert('Error canceling order. Please try again.');
          }
        });
      </script>

</body>

</html>