<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <style>
    .content {
      padding: 20px;
      flex-grow: 1;
      background-color: #fff;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .profile-header {
      display: flex;
      align-items: center;
    }

    .profile-header img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      margin-right: 20px;
    }

    .order-stats .card {
      padding: 20px;
      border-radius: 10px;
    }

    .card-statistic {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
  </style>
</head>

<body>
  <%- include('../inc/top.ejs') %>
  <div class="container-fluid p-4">
    <div class="content">
      <div class="profile-header">
        <img src="<%= user.imageAccount %>" class="rounded-circle me-3" alt="User Photo">
        <h1 class="h3"><%= user.nameAccount %></h1>
      </div>
      <div class="col-md-4">
        <div class="row-md-3">
          <div class="card-statistic">
            <div class="align-items-center">
              <h6>Total Orders</h6>
              <div class="col d-flex">
                <div class="col d-flex align-items-center justify-content-between">
                  <div class="row">
                    <div class="col d-flex align-items-center">
                      <img class="me-2" src="/images/shopping-card.png" alt="" width="50px" height="50">
                      <p class="m-0">$<%= totalAmount.toFixed(2) %></p>                    </div>
                  </div>
                  <small class="text-success m-0">↑ 34.7% <br>Compared to Jan 2022</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <h4>Đơn hàng đã đặt</h4>
    <% if (orders.length > 0) { %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Ngày</th>
          <th>Tổng tiền</th>
          <th>Trạng thái</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
        <% order.details.forEach(detail => { %>
            <tr onclick="window.location='/auth/UserOrderDetail/<%= order._id %>'">
                <td><%= order._id %></td>
          <td>
            <img src="<%= detail.thumbnail || 'https://via.placeholder.com/50' %>" class="img-thumbnail me-2"
              alt="Product Image">
            <%= detail.name %>
          </td>
          <td><%= detail.quantity %></td>
          <td><%= order.dateOrder %></td>
          <td>$<%= detail.price %></td>
          <td class="<%= order.status.toLowerCase() %>"><%= order.status %></td>
        </tr>
        <% }) %>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <p>No orders found.</p>
    <% } %>
  </div>
  <%- include('../inc/end.ejs') %>
</body>

</html>
