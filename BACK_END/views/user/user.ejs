<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <style>
        .content {
            flex-grow: 1;
            padding: 20px;
        }

        .stats {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .stats .card {
            width: 48%;
        }
    </style>
</head>

<body>
    <%- include('../inc/top.ejs') %>
    <div class="content">
        <div class="stats">
            <div class="card text-center">
                <div class="card-body">
                    <h2 class="card-title"><%= users.length %></h2>
                    <p class="card-text">People</p>
                </div>
            </div>
            <div class="card text-center">
                <div class="card-body">
                    <h2 class="card-title">5</h2>
                    <p class="card-text">Departments</p>
                </div>
            </div>
        </div>

        <input type="text" class="form-control mb-3" placeholder="Search here ...">
        <div class="dropdown mb-3">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                All
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Delivered</a>
                <a class="dropdown-item" href="#">Canceled</a>
            </div>
        </div>
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th class="text-secondary">User</th>
                    <th class="text-secondary">Status</th>
                    <th class="text-secondary">Full Name</th>
                    <th class="text-secondary">Phone Number</th>
                    <th class="text-secondary">Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr onclick="window.location='/auth/profile/<%= user._id %>'">
                        <td class="text-secondary"><img src="<%= user.imageAccount %> " alt="User Image" width="50" height="50"> <%= user.userName %></td>
                        <td class="text-secondary"><%= user.locked ? 'Locked' : 'Active' %></td>
                        <td class="text-secondary"><%= user.fullName %></td>
                        <td class="text-secondary"><%= user.phoneNumber %></td>
                        <td class="text-secondary"><%= user.gmail %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                <li class="page-item"><a class="page-link text-dark" href="#">1</a></li>
                <li class="page-item"><a class="page-link text-dark" href="#">2</a></li>
                <li class="page-item"><a class="page-link text-dark" href="#">3</a></li>
                <li class="page-item"><a class="page-link text-dark" href="#">4</a></li>
                <li class="page-item"><a class="page-link text-dark" href="#">...</a></li>
                <li class="page-item"><a class="page-link text-dark" href="#">10</a></li>
                <li class="page-item"><a class="page-link text-dark" href="#">NEXT</a></li>
            </ul>
        </nav>
    </div>
    <%- include('../inc/end.ejs') %>
</body>

</html>
