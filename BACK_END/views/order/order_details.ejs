<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đơn hàng chi tiết</title>
    <!-- Add Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <style>
        .content {
            margin-left: 20px;
            margin-right: 20px;
        }

        .breadcrumb-item a {
            color: black;
            text-decoration: none;
        }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }

        .timeline {
            position: relative;
            padding: 20px 0;
            list-style: none;
        }

        .timeline:before {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 20px;
            width: 2px;
            content: '';
            background-color: #e9ecef;
        }

        .timeline-item {
            position: relative;
            margin: 0 0 20px 20px;
        }

        .timeline-item:before {
            position: absolute;
            left: -8px;
            width: 16px;
            height: 16px;
            content: '';
            border-radius: 50%;
            background-color: #fff;
            border: 2px solid #6c757d;
        }

        .timeline-item.active:before {
            background-color: #007bff;
            border-color: #007bff;
        }

        .timeline-item:last-child {
            margin-bottom: 0;
        }

        .timeline-item .timeline-time {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .timeline-item .timeline-status {
            font-size: 1rem;
            font-weight: bold;
        }

        .timeline-item .timeline-status.active {
            color: #007bff;
        }

        .timeline-item .timeline-note {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .timeline-item .timeline-note.canceled {
            color: #ff0000;
        }

        .timeline-item .timeline-note.completed {
            color: #28a745;
        }
        .hidden {
    display: none;
}

    </style>
</head>

<body>

    <%- include('../inc/top.ejs') %>
    <div class="content">
        <div class="d-flex justify-content-between align-items-center mb-4 row">
            <h4>Đơn hàng chi tiết</h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/home">Home</a></li>
                    <li class="breadcrumb-item"><a href="http://localhost:3000/order/orderlist">Danh sách đơn hàng</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Đơn hàng chi tiết</li>
                </ol>
            </nav>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h5>Order ID: <span class="text-secondary">#<%= orderResponse._id %></span> <span class="badge bg-warning text-dark">
                                <%= orderResponse.status %>
                            </span></h5>
                        <p>
                            <%= orderResponse.dateOrder %>
                        </p>
                    </div>
                    <div>
                        <button class="btn btn-secondary"><img src="/images/fluent_print-16-regular.png" alt="Print"
                                style="filter: invert(100%);"></button>
                        <button class="btn btn-secondary" id="confirm-order-btn">Xác nhận</button>
                        <button class="btn btn-secondary" id="cancel-order-btn">Cancel</button>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="col mb-4">
                            <div class="card flex" style="display: table; height: 100%;">
                                <div class="card-body d-flex row" style="display: table-cell; vertical-align: middle;">
                                    <div class="col d-flex" style="margin-left: 20px; margin-right: 20px;">
                                        <img class="d-flex" src="/images/shopping-card.png" alt="Order Icon" width="50px"
                                            height="50">
                                        <div style="margin-left: 10px;">
                                            <h5 class="card-title">Thông tin đơn hàng</h5>
                                            <p class="card-text text-secondary">
                                                Full Name: <%= orderResponse.nameOrder %><br>
                                                Phone: <%= orderResponse.phoneNumber %><br>
                                                Address: <%= orderResponse.addressOrder %><br>
                                                Pay: <%= orderResponse.pay %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h5 style="margin-top: 20px;">Products</h5>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col" class="text-secondary">Product Name</th>
                                <th scope="col" class="text-secondary">Giá</th>
                                <th scope="col" class="text-secondary">Size</th>
                                <th scope="col" class="text-secondary">Màu</th>
                                <th scope="col" class="text-secondary">Số lượng</th>
                                <th scope="col" class="text-secondary">Tổng</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orderResponse.details.forEach(detail => { %>
                                <tr>
                                    <td>
                                        <img src="<%= detail.shoeId.thumbnail %>" class="img-thumbnail me-2" alt="Product Image" width="30" height="30">
                                        <%= detail.shoeId.name %>
                                    </td>
                                    <td>
                                        <%= detail.shoeId.price %> VND
                                    </td>
                                    <td>
                                        <%= detail.shoeId.size %>
                                    </td>
                                    <td style="color: <%= detail.shoeId.codeColor %>;">
                                        <%= detail.shoeId.textColor %>
                                    </td>
                                    <td>
                                        <%= detail.shoeId.quantity %>
                                    </td>
                                    <td>
                                        <%= detail.shoeId.quantity * detail.shoeId.price %> VND
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end">
                        <div class="text-right">
                            <p>Tổng (Chưa áp mã): <strong>
                                    <%= orderResponse.total + orderResponse.discountAmount %> VND
                                </strong></p>
                            <p>Mã giảm giá: <strong>
                                    <%= orderResponse.discountAmount %> VND
                                </strong></p>
                            <p class="h4">Tổng (Đã áp mã): <strong>
                                    <%= orderResponse.total %> VND
                                </strong></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <h5>Order Status Details</h5>
                <ul class="timeline">
                    <% orderResponse.orderStatusDetails.forEach(statusDetail => { %>
                        <li class="timeline-item <%= statusDetail.status === 'Đã hủy' ? 'active' : '' %>">
                            <div class="timeline-time"><%= statusDetail.timestamp %></div>
                            <div class="timeline-status <%= statusDetail.status === 'Đã hủy' ? 'canceled' : '' %>"><%= statusDetail.status %></div>
                            <div class="timeline-note <%= statusDetail.status === 'Đã hủy' ? 'canceled' : '' %>"><%= statusDetail.note %></div>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>

    <!-- Confirmation Dialog -->
    <div class="modal fade" id="confirmOrderModal" tabindex="-1" aria-labelledby="confirmOrderModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmOrderModalLabel">Xác nhận đơn hàngr</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to confirm this order?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirm-order">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Cancel Dialog -->
    <div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="cancelOrderModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelOrderModalLabel">Cancel Order</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="cancel-form">
                        <div class="mb-3">
                            <label for="cancelReason" class="form-label">Reason for Cancellation</label>
                            <textarea class="form-control" id="cancelReason" rows="3" required></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="cancel-order">Cancel Order</button>
                </div>
            </div>
        </div>
    </div>

    <script>
  document.getElementById('confirm-order-btn').addEventListener('click', () => {
    const currentStatus = '<%= orderResponse.status %>';
    let apiUrl = '';

    if (currentStatus === 'Chờ xác nhận') {
        apiUrl = `/order/shipOrder/<%= orderResponse._id %>`;
    } else if (currentStatus === 'Chuẩn bị hàng') {
        apiUrl = `/order/shipOrder/<%= orderResponse._id %>`;
    } else if (currentStatus === 'Giao hàng') {
        apiUrl = `/order/confirmOrder/<%= orderResponse._id %>`;
    } else {
        alert('Invalid order status for confirmation.');
        return;
    }

    const confirmOrderModal = new bootstrap.Modal(document.getElementById('confirmOrderModal'));
    confirmOrderModal.show();

    document.getElementById('confirm-order').addEventListener('click', async () => {
        try {
            const response = await fetch(apiUrl, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            if (response.ok) {
                const result = await response.json();
                alert(result.message);
                location.reload();
            } else {
                const error = await response.json();
                alert(error.message);
            }
        } catch (error) {
            console.error('Error confirming order:', error);
            alert('Error confirming order. Please try again.');
        }
    });
});

document.getElementById('cancel-order-btn').addEventListener('click', () => {
    const cancelOrderModal = new bootstrap.Modal(document.getElementById('cancelOrderModal'));
    cancelOrderModal.show();
});

document.getElementById('cancel-order').addEventListener('click', async () => {
    const orderId = '<%= orderResponse._id %>';
    const cancelReason = document.getElementById('cancelReason').value;
    try {
        const response = await fetch(`/order/cancelOrder/${orderId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ cancelReason }),
        });

        if (response.ok) {
            const result = await response.json();
            alert(result.message);
            location.reload();
        } else {
            const error = await response.json();
            alert(error.message);
        }
    } catch (error) {
        console.error('Error canceling order:', error);
        alert('Error canceling order. Please try again.');
    }
});

document.addEventListener('DOMContentLoaded', () => {
    // Lấy trạng thái của đơn hàng từ biến EJS
    const orderStatus = '<%= orderResponse.status %>';

    // Lấy các nút cần ẩn
    const confirmButton = document.getElementById('confirm-order-btn');
    const cancelButton = document.getElementById('cancel-order-btn');

    // Kiểm tra trạng thái đơn hàng và ẩn các nút nếu trạng thái là 'Đã nhận hàng'
    if (orderStatus === 'Đã nhận hàng' || orderStatus === 'Đã hủy') {
        if (confirmButton) confirmButton.classList.add('hidden');
        if (cancelButton) cancelButton.classList.add('hidden');
    }
});


    </script>
</body>

</html>
